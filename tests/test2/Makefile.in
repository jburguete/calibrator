CFLAGS = -Wall -O3 @CPPFLAGS@ @GSL_CFLAGS@ @XML_CFLAGS@ @GLIB_CFLAGS@ \
	@GTHREAD_CFLAGS@
LIBS = @LDFLAGS@ @LIBS@ @GSL_LIBS@ @XML_LIBS@ @GLIB_LIBS@ @GTHREAD_LIBS@
CC = @CC@ @ARCH@ @LTO@ @STD@ @MPI@ @WINCFLAGS@ #-pg 

all: simulator evaluator

simulator: simulator.c libgenetic@SO@ Makefile
	$(CC) $(CFLAGS) simulator.c $(LIBS) -L. -Wl,-rpath=. -lgenetic -o simulator

evaluator: evaluator.c Makefile
	$(CC) $(CFLAGS) evaluator.c $(LIBS) -o evaluator
