set term pos eps enh
set size ratio 1 0.42,0.6

set xlabel 'x'
set ylabel 'y'
set xrange [-5:5]
set yrange [-5:5]
#set label 1 "*" at pi/4,pi/4 center
#show label

set title 'MC-1'
set out 'sphere-variables-mc-2500-1.eps'
plot 'variables-mc-2500-1-14' not w d

set title 'MC+IT-1'
set out 'sphere-variables-mc-100-25-10-0.1.eps'
plot 'variables-mc-100-25-10-0.1-14' not w d

set title 'SW-1'
set out 'sphere-variables-sw-50-50-1.eps'
plot 'variables-sw-50-50-1-14' not w d

set title 'SW+IT-1'
set out 'sphere-variables-sw-10-10-25-10-0.5.eps'
plot 'variables-sw-10-10-25-10-0.5-14' not w d

set title 'GE-5'
set out 'sphere-variables-ga-250-16-0.2-0.2-0.2-32.eps'
plot 'variables-ga-250-16-0.2-0.2-0.2-32-14' not w d

set title 'MC+R-1'
set out 'sphere-variables-mc-r-100-1-600-4-0.1-1.eps'
plot 'variables-mc-r-100-1-600-4-0.1-1-14' not w d

unset title
set size noratio 0.47,0.47
set xlabel 'N_{simulations}'
set ylabel 'd_i'
set xrange [0:2500]
set yrange [-16:10]

set out 'sphere-evolution-sw.eps'
plot 'v-sw-50-50-1-14' u 1:(log10($5)) t'SW-1' w l,\
	'v-sw-10-10-25-10-0.5-14' u 1:(log10($5)) t'SW+IT-1' w l,\
	'v-sw-10-10-25-4-0-14' u 1:(log10($5)) t'SW+IT-2' w l

set out 'sphere-evolution-mc.eps'
plot 'v-mc-2500-1-14' u 1:(log10($5)) t'MC-1' w l,\
	'v-mc-100-25-10-0.1-14' u 1:(log10($5)) t'MC+IT-1' w l,\
	'v-mc-100-25-4-0-14' u 1:(log10($5)) t'MC+IT-2' w l

set out 'sphere-evolution-sw-cdr.eps'
plot 'v-sw-c-10-10-1-600-0.1-1-14' u 1:(log10($5)) t'SW+CD-1' w l,\
	'v-sw-c-40-40-1-225-0.01-1-14' u 1:(log10($5)) t'SW+CD-2' w l,\
	'v-sw-r-10-10-1-1200-2-0.1-1-14' u 1:(log10($5)) t'SW+R-1' w l,\
	'v-sw-r-40-40-1-450-2-0.01-1-14' u 1:(log10($5)) t'SW+R-2' w l

set out 'sphere-evolution-mc-cdr.eps'
plot 'v-mc-c-100-1-600-0.1-1-14' u 1:(log10($5)) t'MC+CD-1' w l,\
	'v-mc-c-1600-1-225-0.01-1-14' u 1:(log10($5)) t'MC+CD-2' w l,\
	'v-mc-r-100-1-1200-2-0.1-1-14' u 1:(log10($5)) t'MC+R-1' w l,\
	'v-mc-r-1600-1-450-2-0.01-1-14' u 1:(log10($5)) t'MC+R-2' w l

set out 'sphere-evolution-mc-cd-r.eps'
plot [0:700]\
	'v-mc-c-100-1-600-0.01-0-14' u 1:(log10($5)) t'MC+CD-3 (rel=0)' w l,\
	'v-mc-c-100-1-600-0.01-1-14' u 1:(log10($5)) t'MC+CD-4 (rel=1)' w l,\
	'v-mc-c-100-1-600-0.01-2-14' u 1:(log10($5)) t'MC+CD-5 (rel=2)' w l

set out 'sphere-evolution-mc-cd-s.eps'
plot [0:700]\
	'v-mc-c-100-1-600-0.01-0-14' u 1:(log10($5)) t'MC+CD-3 (st_x=st_y=0.01)'\
		w l,\
	'v-mc-c-100-1-600-0.1-0-14' u 1:(log10($5)) t'MC+CD-6 (st_x=st_y=0.1)' w l,\
	'v-mc-c-100-1-600-1-0-14' u 1:(log10($5)) t'MC+CD-7 (st_x=st_y=1)' w l

set out 'sphere-evolution-mc-r.eps'
